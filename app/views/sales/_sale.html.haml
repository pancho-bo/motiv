= form_for @sale do |f|
  - if @sale.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sale.errors.count, "error")} prohibited this sale from being saved:"
      %ul
        - @sale.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :product
    = f.collection_select :product_id, @products, :id, :name, prompt: 'Select product'
  .form-group
    = f.label :quantity
    = f.text_field :quantity
  .form-group
    = f.label :date
    = f.text_field :date
  .form-group
    = f.submit 'Sell'
