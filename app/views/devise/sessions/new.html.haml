%h2= t('.title')
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-group
    = f.label :email, class: 'sr-only'
    %br/
    = f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email')
  .form-group
    = f.label :password, class: 'sr-only'
    %br/
    = f.password_field :password, autocomplete: "off", placeholder: t('activerecord.attributes.user.password')
  - if devise_mapping.rememberable?
    .form-group
      .checkbox
        %label
          = f.check_box :remember_me
          = t('devise.remember_me')
  .form-group
    = f.submit t('btn.sign_in'), class: 'btn btn-default'
= render "devise/shared/links"
