= form_for [@product, @price] do |f|
  - if @price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@price.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @price.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :price
    = f.text_field :price
    = f.label :start_date
    = f.text_field :start_date
    = f.label :end_date
    = f.text_field :end_date
  .actions
    = f.submit 'Assign'
