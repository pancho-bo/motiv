= form_for [@product, @price] do |f|
  - if @price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@price.errors.count, "error")} prohibited this price from being saved:"
      %ul
        - @price.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :price
    = f.text_field :price
  .form-group
    = f.label :start_date
    = f.date_field :start_date
  .form-group
    = f.label :end_date
    = f.date_field :end_date
  .form-group
    = f.submit t('btn.assign'), class: 'btn btn-default'
